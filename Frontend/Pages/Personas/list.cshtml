@page
@model MyApp.Namespace.listModel
@{
}
<div class="justify-content-center text-center">

    
<h1>Listado Personas Registradas</h1>
<br>
</div>
<div>
    <div>
        <a asp-page="Create"> Crear Una Nueva Persona</a>
        <i class="fa-sharp fa-solid fa-plus"></i>
    </div>
    <br>
    <table class="table table-dark">
        <tr>
            <th>Id</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Edad</th>
            <th>Cedula</th>
            <th>Detalle</th>
            <th>Eliminar</th>
            <th>Actualizar</th>
        </tr>
        @foreach(var persona in Model.Personas){
            if(persona.Tipo == "C"){
          <tr>
            <td>@persona.Id</td>
            <td>@persona.Nombre</td>
            <td>@persona.Apellidos</td>
            <td>@persona.Edad</td>
            <td>@persona.Cedula</td>
            <td> 
            <a class="btn btn-primary" asp-page="./Details" asp-route-id="@persona.Id">
            <i class="fa-sharp fa-solid fa-list"></i>
            </a>
            </td>
            <td> 
            <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@persona.Id">
            <i class="fa-sharp fa-solid fa-trash"></i>
            </a>
            </td>
            <td> 
            <a class="btn btn-primary" asp-page="./Update">
            <i class="fa-solid fa-rotate"></i>
            </a>
            </td>
            </tr>  }
        }
    </table>
</div>

