@page
@model MyApp.Namespace.listClienteModel
@{
}
<div class="justify-content-center text-center">

    
<h1>Listado Clientes Registrados</h1>
<br>
</div>
<div>
    <div>
        <a asp-page="Create"> Crear Un Nuevo Cliente</a>
        <i class="fa-sharp fa-solid fa-plus"></i>
    </div>
    <br>
    <table class="table table-dark">
        <tr>
            <th>Id</th>
            <th>Registro</th>
            <th>Solicitar Mantenimiento</th>
            <th>Consultar Estado del Mantenimiento</th>
            <th>Detalle</th>
            <th>Eliminar</th>
            <th>Actualizar</th>
        </tr>
        @foreach(var Cliente in Model.Clientes){
          <tr>
            <td>@Cliente.Id</td>
            <td>@Cliente.Registro</td>
            <td>@Cliente.Solicitar_Mantenimiento</td>
            <td>@Cliente.Consultar_Mantenimiento</td>
            <td> 
            <a class="btn btn-primary" asp-page="./Details" asp-route-id="@Cliente.Id">
            <i class="fa-sharp fa-solid fa-list"></i>
            </a>
            </td>
            <td> 
            <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@Cliente.Id">
            <i class="fa-sharp fa-solid fa-trash"></i>
            </a>
            </td>
            <td> 
            <a class="btn btn-primary" asp-page="./Update" asp-route-id="@Cliente.Id">
            <i class="fa-solid fa-rotate"></i>
            </a>
            </td>
            </tr>  
        }
    </table>
</div>

